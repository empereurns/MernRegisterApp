<form method="post" action="/register">

    <div class="form-group">
    <label for="exampleInputName1">First Name</label>
    <input type="text" class="form-control" id="exampleInputName1"  name="firstname" placeholder="Enter First Name">
  </div>

  <div class="form-group">
